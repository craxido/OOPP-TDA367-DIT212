    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/dmgUpgradeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/shopitembutton" />

        <TextView
            android:id="@+id/dmgUpgradeCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dmgUpgradeText"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/dmgUpgradeText"
            android:layout_toRightOf="@+id/dmgUpgradeText"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/upgradeCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/newDmg"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/dmgUpgradeCost"
            android:layout_toStartOf="@+id/dmgUpgradeCost"
            android:text="@string/cost"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dmgUpgradeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dmgUpgradeButton"
            android:layout_alignStart="@+id/dmgUpgradeButton"
            android:layout_alignTop="@+id/dmgUpgradeButton"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="33dp"
            android:text="@string/damage_upgrade"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentDmgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/currentDmg"
            android:layout_alignLeft="@+id/dmgUpgradeText"
            android:layout_alignStart="@+id/dmgUpgradeText"
            android:text="@string/currentDmg"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/currentDmg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dmgUpgradeText"
            android:layout_alignStart="@+id/dmgUpgradeText"
            android:layout_below="@+id/dmgUpgradeText"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/newDmgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dmgUpgradeText"
            android:layout_alignStart="@+id/dmgUpgradeText"
            android:layout_below="@+id/dmgUpgradeText"
            android:layout_marginTop="30dp"
            android:text="@string/newDmg"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/newDmg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dmgUpgradeText"
            android:layout_alignStart="@+id/dmgUpgradeText"
            android:layout_below="@+id/dmgUpgradeText"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/dmgUpgradeCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/upgradeCostText"
            android:layout_alignBottom="@+id/upgradeCostText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/dpsUpgradeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/shopitembutton" />

        <TextView
            android:id="@+id/dpsUpgradeCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/dpsCostText"
            android:layout_alignRight="@+id/dpsCostText"
            android:layout_alignTop="@+id/dpsUpgradeText"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dpsCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/newDPS"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/dpsUpgradeCost"
            android:layout_toStartOf="@+id/dpsUpgradeCost"
            android:text="@string/cost"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dpsUpgradeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dpsUpgradeButton"
            android:layout_alignStart="@+id/dpsUpgradeButton"
            android:layout_alignTop="@+id/dpsUpgradeButton"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="33dp"
            android:text="@string/dpsUpgradeText"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/currentDPSText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/currentDPS"
            android:layout_alignLeft="@+id/dpsUpgradeText"
            android:layout_alignStart="@+id/dpsUpgradeText"
            android:text="@string/currentDPS"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/currentDPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/currentDPSText"
            android:layout_toEndOf="@+id/currentDPSText" />

        <TextView
            android:id="@+id/newDPSText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dpsUpgradeText"
            android:layout_alignStart="@+id/dpsUpgradeText"
            android:layout_below="@+id/dpsUpgradeText"
            android:layout_marginTop="30dp"
            android:text="@string/newDPS"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/newDPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/newDPSText"
            android:layout_alignBottom="@+id/newDPSText"
            android:layout_toEndOf="@+id/currentDPSText"
            android:layout_toRightOf="@+id/currentDPSText"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/dpsUpgradeCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dpsCostText"
            android:layout_alignBottom="@+id/dpsCostText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>




</RelativeLayout>

