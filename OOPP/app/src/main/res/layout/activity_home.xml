<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sauronsarmy.oopp.HomeActivity"
    android:background = "@drawable/homebg">

    <include layout="@layout/bottom_bar"
        android:id="@+id/include3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp">

        <ImageButton
            android:id="@+id/oilUpgradeButton"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginBottom="163dp"
            android:background="@android:color/transparent"
            android:contentDescription=""
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/shopitembutton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/oilUpgradeCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/oilUpgradeText"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/oilUpgradeText"
            android:layout_toRightOf="@+id/oilUpgradeText"
            android:text="1"
            android:textAlignment="textEnd"
            android:gravity = "end"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/upgradeCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/oilUpgradeCost"
            android:layout_alignRight="@+id/oilUpgradeCost"
            android:layout_below="@+id/oilUpgradeCounter"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="46dp"
            android:text="Cost:"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/oilUpgradeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:text="oil pump upgrade"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="33dp"
            android:layout_alignTop="@+id/oilUpgradeButton"
            android:layout_alignLeft="@+id/oilUpgradeButton"
            android:layout_alignStart="@+id/oilUpgradeButton" />

        <TextView
            android:id="@+id/currentMpsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current money/sec:"
            android:textColor = "@android:color/black"
            android:layout_below="@+id/oilUpgradeText"
            android:layout_alignLeft="@+id/oilUpgradeText"
            android:layout_alignStart="@+id/oilUpgradeText"
            android:layout_marginTop="8dp"
            android:textSize = "15sp"/>

        <TextView
            android:id="@+id/currentMps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor = "@android:color/black"
            android:layout_below="@+id/oilUpgradeText"
            android:layout_alignLeft="@+id/oilUpgradeText"
            android:layout_alignStart="@+id/oilUpgradeText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft = "140dp"
            android:textSize = "15sp"/>

        <TextView
            android:id="@+id/newMpsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New money/sec:"
            android:textColor = "@android:color/black"
            android:layout_below="@+id/oilUpgradeText"
            android:layout_alignLeft="@+id/oilUpgradeText"
            android:layout_alignStart="@+id/oilUpgradeText"
            android:layout_marginTop="30dp"
            android:textSize = "15sp"/>


        <TextView
            android:id="@+id/newMps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor = "@android:color/black"
            android:layout_below="@+id/oilUpgradeText"
            android:layout_alignLeft="@+id/oilUpgradeText"
            android:layout_alignStart="@+id/oilUpgradeText"
            android:layout_marginTop="30dp"
            android:layout_marginLeft = "120dp"
            android:textSize = "15sp"/>

        <TextView
            android:id="@+id/oilUpgradeCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/upgradeCostText"
            android:layout_alignBottom="@+id/upgradeCostText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:text="5 g"
            android:textAlignment="textEnd"
            android:gravity = "end"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>
